<!doctype html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>My To-Do List</title>
		<link href="/css/todo.css" rel="stylesheet">
		<link href="/css/jquery-ui.min.css" rel="stylesheet">
		<script src="/js/jquery.min.js"></script>
		<script src="/js/jquery-ui.min.js"></script>
		<script src="/todo.js"></script>

	</head>
	
	<body>
		<div class="container">
			<div id="to-do">
				<h1>My To-do List</h1>
				<button id="add-todo">Add to-do item</button>

				<h2>To Be Done</h2>
				<ul id="todo-list" class="sortlist">
					 <% for(let i = 0; i < todos.length; i++) { %>
						<% if(!todos[i].done) { %>
							<li><span class="done">%</span><span class="delete">x</span><span class="edit">r</span><span class="task"><%= todos[i].task %></span><span class="id"><%= todos[i].id %></span><span class="username"><%= todos[i].username %></span></li>
						<% } %>
					<% } %>
				</ul>
			</div>
			
			<div id="completed">
				<h2>Completed Tasks</h2>
				<ul id="completed-list" class="sortlist">
					
					<% for(let i = 0; i < todos.length; i++) { %>

						<% if(todos[i].done) { %>
							<li><span class="done">%</span><span class="delete">x</span><span class="edit">r</span><span class="task"><%= todos[i].task %></span><span class="id"><%= todos[i].id %></span><span class="username"><%= todos[i].username %></span></li>
						<% } %>

					<% } %>

				</ul>
			</div>
			
			<div id="new-todo" title="Add to-do item">
				<form>
				<p>
					<label for="task">Task Name:</label>
					<input type="text" name="task" id="task">

					<label for="username">User Name:</label>
					<input type="text" name="username" id="username">
					</p>
				</form>
			</div>


			<div id="delete-todo" title="Delete to-do item">
				<form>
					<p>Are you sure you want to delete this task?</p>
				</form>
			</div>

			<div id="edit-todo" title="Edit to-do item">
				<form>
					<label for="taskEdit">Task Name:</label>
					<input type="text" name="taskEdit" id="taskEdit">

					<label for="usernameEdit">User Name:</label>
					<input type="text" name="usernameEdit" id="usernameEdit">

				</form>
			</div>


		</div>
	</body>
</html>
